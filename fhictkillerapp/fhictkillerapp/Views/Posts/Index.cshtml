@model IEnumerable<fhictkillerapp.Models.Posts>
<select class="form-select form-select-md" aria-label=".form-select-md example">
    <option selected>Open this select menu</option>
    <option value="1" name="sort">ABC ↑</option>
    <option value="2" name="sort">ABC ↓</option>
    <option value="3" name="sort">Date ↑</option>
    <option value="4" name="sort">Date ↓</option>
</select>
@Html.ActionLink("Create Post", // <-- Link text
                 "CreatePost", // <-- Action Method Name
                 "Posts", // <-- Controller Name
                 null, // <-- Route value
                 null // <-- htmlArguments
                 )
<div style="        width: 1200px;

        vertical-align: middle;
">
    @foreach (var item in ViewBag.Posts)
    {
        <div class="card" style="float: left; margin: 4px; width: 14rem;" onclick="location.href='/Post/@item.PostId';">
            <img src="@item.images[0]" class="card-img-top" alt="data\IMG\361a8b37-a37a-4141-ae15-814c5dc3d6e4\Untitled-1.jpg" style="object-fit: contain;
        width: 200px;
        height: 200px;
        margin-left: auto;
        margin-right: auto;
    ">
            <div class="card-body">
                <h5 class="card-title">@item.PostName</h5>
            </div>
        </div>
    }
</div>


