@model Common.Models.Chat
<div>
    @foreach (var item in ViewBag.Chat)
    {
    <div style="
        width: 200px;
        height: 50px;
        float: left;
        background-color: white;
        border-style: solid;
        margin: 5px;
        border-radius: 5px;
        border-width: 2px;
        position: relative;
    ">
        <p>@item.Message</p>
        <p style="font-size: 8px;
        float: right;
">@item.DateTime</p>
    </div>
    }
 </div>
        <form asp-action="SendMessage" asp-controller="Chat" enctype="multipart/form-data">
            <label asp-for="Message"></label>
            <input asp-for="Message" placeholder="Your name goes here" />
            <input type="submit" />
        </form>
